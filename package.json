{
    "name": "seen",
    "version": "0.1.2",
    "description": "seen tools and examples",
    "type": "module",
    "keywords" : [
      "seen" , 
      "programming language", 
      "compiler",
      "editor",
      "playground",
      "examples",
      "س" , 
      "لغة برمجة", 
      "مترجم",
      "محرر",
      "حقل_تجارب",
      "امثلة"
    ],  
    "main": "src/project.js",
    "repository": {
      "type": "git",
      "url": "git+https://github.com/abukhadra/seen.git"
    },  
    "scripts": {
      "preinstall" : "npm run clean",
      "prepare": "vite build",
      "postprepare" : "npm run copy-files",
      "copy-files" : "cp ./node_modules/seen-compiler/scompiler.js . && cp ./node_modules/seen-editor/seditor.js . && cp ./node_modules/seen-playground/splay.js . ",
      "clean": "rm -rf ./dist && rm -rf ./scompiler.js && rm -rf ./seditor.js && rm -rf ./splay.js && rm -rf ./node_modules  && rm -rf ./package-lock.json"
    },

    "dependencies": {
        "seen-compiler" : "github:abukhadra/seen-compiler",
        "seen-editor" : "github:abukhadra/seen-editor",
        "seen-playground" : "github:abukhadra/seen-playground"
    },

    "author": "Mustafa Abukhadra",
    "license": "MIT",
    "homepage": "https://seenlang.org"
  }
  